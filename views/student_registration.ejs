<%- include("./partials/header") -%>

<title>Student's Information</title>

<div class="student_details pb-0">
    <div class="container-fluid">
        <div class="container mt-3">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6 col-12">
                    <%- include("./partials/flash_message") -%>
                    <form action="/student/registration" class="mt-3" method="POST" enctype="multipart/form-data">
                        <div class="d-flex justify-content-between">
                            <h3>Student Registration</h3>
                            <h5>Total Students-
                                <%= Number(count-1) %></h5>
                        </div>
                        <div class="mb-3">
                            <label for="students_name" class="form-label">Full Name</label>
                            <input
                                type="text"
                                class="form-control"
                                id="students_name"
                                name="students_name"
                                required
                                placeholder="John Doe"/>
                        </div>

                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Student ID</label>
                            <input
                                type="number"
                                class="form-control"
                                value="<%= ID %>"
                                id="exampleInputEmail1"
                                readonly
                                name="students_id"
                                required/>
                        </div>

                        <div class="mb-3">
                            <label for="fathers_name" class="form-label">Father's Name</label>
                            <input
                                type="text"
                                class="form-control"
                                id="fathers_name"
                                name="father_name"
                                required
                                placeholder="John Smith"/>
                        </div>

                        <div class="mb-3">
                            <label for="mother_name" class="form-label">Mother's Name</label>
                            <input
                                type="text"
                                class="form-control"
                                id="mother_name"
                                aria-describedby="students_name"
                                name="mother_name"
                                placeholder="Angelina"
                                required/>
                        </div>

                        <div class="mb-3">
                            <label for="dob" class="form-label">Date Of Birth</label>
                            <input
                                type="date"
                                class="form-control"
                                id="dob"
                                aria-describedby="students_name"
                                name="dateOfBirth"
                                required/>
                        </div>

                        <div class="mb-3">
                            <label for="contact_number" class="form-label">Contact Number</label>
                            <input
                                type="tel"
                                class="form-control"
                                id="contact_number"
                                aria-describedby="contact_number"
                                name="contact_number"
                                required
                                placeholder="0123412356"/>
                        </div>

                        <div class="mb-3">
                            <label for="contact_rel" class="form-label">Contact Relation</label>
                            <select class="form-select mb-3" name="contact_rel">
                                <option selected>Select</option>
                                <option value="Mother" class="option">Mother</option>
                                <option value="Father">Father</option>
                                <option value="Ownself">Ownself</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="class_name" class="form-label">Class</label>
                            <select class="form-select mb-3" name="Class">
                                <option selected>Select</option>
                                <option value="Play">Play</option>
                                <option value="Nursery">Nursery</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                                <option value="Intermediate first year">Intermediate First Year
                                </option>
                                <option value="Intermediate second year">Intermediate Second Year
                                </option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="section" class="form-label">Section</label>
                            <select class="form-select mb-3" name="section">
                                <option selected>Select</option>
                                <option value="N/A">N/A</option>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="session" class="form-label">Session</label>
                            <input
                                type="tel"
                                class="form-control"
                                id="session"
                                aria-describedby="session"
                                name="session"
                                required
                                value="<%= session %>"
                                readonly/>
                        </div>

                        <div class="mb-3">
                            <label for="admission_date" class="form-label">Admission Date</label>
                            <input
                                type="text"
                                class="form-control"
                                id="dob"
                                aria-describedby="admission_date"
                                name="admission_date"
                                value="<%= new Date().toLocaleDateString('en-GB') %>"
                                required
                                readonly/>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input
                                type="password"
                                class="form-control"
                                id="password"
                                aria-describedby="password"
                                name="password"
                                required
                                placeholder="******"/>
                        </div>

                        <div class="mb-3">
                            <label for="confirm-password" class="form-label">Confirm Password</label>
                            <input
                                type="password"
                                class="form-control"
                                id="confirm-password"
                                aria-describedby="confirm-password"
                                name="password1"
                                required
                                placeholder="******"/>
                        </div>

                        <div class="mb-3">
                            <label for="formFile" class="form-label">Student's Photo</label>
                            <input name="photo" class="form-control" type="file" id="formFile">
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>

                        </form>
                    </div>
                    <div class="col-md-3"></div>
                </div>
            </div>
        </div>
    </div>

    <%- include("./partials/footer") -%>